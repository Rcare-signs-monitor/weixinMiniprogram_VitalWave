page {
  background: #fff;
}

view {
  box-sizing: border-box;
}

image {
  width: 100%;
  height: 100%;
}

.btn .bgce {
  background-color: #AFAFAF;
}

.box {
  width: 100%;
  padding: 20rpx;
  background: #fff;
}

.form-group {
  margin-bottom: 20rpx;
  overflow: hidden;
  position: relative;
}

.form-group-top {
  width: 100%;
  overflow: hidden;
  display: flex;
}

.form-group-top image {
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
}

.form-group-top text {
  display: inline-block;
  font-size: 30rpx;
  color: #444;
  font-weight: bold;
  position: relative;
  margin-left: 10rpx;
}

.form-group input {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  border: 1rpx solid #eee;
  font-size: 26rpx;
  color: #444;
}

.form-group-xb {
  width: 100%;
  margin-top: 5rpx;
  overflow: hidden;
}

.form-group-xb .age_box {
  display: inline-block;
  font-size: 28rpx;
  width: 160rpx;
  text-align: center;
}

.form-group-xb .age_box input {
  width: 66%;
  display: inline-block;
  vertical-align: middle;
  margin-right: 10rpx;
  padding: 0;
}

.form-group-xb label {
  float: left;
  width: 10%;
  padding: 10rpx 20rpx;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

.form-group-xb label image {
  float: left;
  width: 35rpx;
  height: 35rpx;
  margin-top: 2rpx;
}

.form-group-xb label text {
  float: left;
  font-size: 28rpx;
  color: #A5A5A5;
  margin-left: 5rpx;
}

.form-group-xb label.onon {
  background: #4ACAB3;
}

.form-group-xb label.onon text {
  color: #fff;
}

.arrow {
  position: absolute;
  top: 42rpx;
  right: 0;
  width: 50rpx;
  height: 55rpx;
}

.submit {
  line-height: 1.6em;
  color: #fff;
  background: #4ACAB3;
}

.time_list {
  margin-top: 20rpx;
  margin-left: 30rpx;
}

.btn {
  width: 100%;
  padding: 0 20rpx;
  position: fixed;
  bottom: 30rpx;
  left: 0;
}

.btn button {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #4ACAB3;
  font-size: 28rpx;
  color: #fff;
}

button::after {
  border: none;
}

.form-group-money {
  position: relative;
  width: 30%;
  margin-top: 15rpx;
}

.form-group-money text {
  font-size: 25rpx;
  color: #FF582B;
  position: absolute;
  top: 15rpx;
  left: 20rpx;
}

.form-group-money input {
  padding-left: 42rpx;
  color: #FF582B;
  border: none;
  font-size: 45rpx;
  font-weight: bold;
}

.money {
  width: 50%;
  float: left;
}

.status_png {
  width: 80%;
  margin: 20rpx auto;
  height: 75rpx;
}

.list {
  padding: 0 20rpx;
  padding-top: 70rpx;
}

.list .item {
  padding: 20rpx 0;
  font-size: 30rpx;
  display: flex;
}

.list .item .left {
  display: inline-block;
  width: 190rpx;
  text-align: justify;
  text-align-last: justify;
}

.list .item .right {
