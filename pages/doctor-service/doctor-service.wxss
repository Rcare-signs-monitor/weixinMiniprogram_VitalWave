.nomore {
  line-height: 60rpx;
  height: 60rpx;
  text-align: center;
  position: relative;
  font-size: 30rpx;
  width: 100%;
  color: #B3B3B3;
}

.nomore::before {
  content: "";
  display: block;
  width: 100rpx;
  height: 2rpx;
  background: #B3B3B3;
  position: absolute;
  left: 180rpx;
  top: 50%;
}

